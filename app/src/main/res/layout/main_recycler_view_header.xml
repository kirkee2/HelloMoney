<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="213dp"
    android:orientation="vertical"
    android:background="@android:color/white">

    <ImageView
        android:layout_marginTop="13dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/main_icon"/>

    <TextView
        android:layout_width="296dp"
        android:layout_height="30dp"
        android:text="@string/main_ment_1"
        android:textColor="@color/normalTypo"
        android:textSize="@dimen/medium"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="296dp"
        android:layout_height="30dp"
        android:textColor="@color/normalTypo"
        android:textSize="@dimen/medium"
        android:layout_gravity="center"
        android:text="@string/main_ment_2"
        android:gravity="center"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="23dp"
        android:layout_gravity="center">

    <Button
        android:id="@+id/requestQuotation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/main_button_ment"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/medium"
        android:background="@color/colorPrimaryTint"/>
    </android.support.v7.widget.CardView>
</LinearLayout>