<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#24aaf2"
    android:orientation="horizontal"
    android:layout_weight="100"
    android:weightSum="100">

    <RelativeLayout
        android:id="@+id/relativeLayoutOne"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="5"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:id="@+id/myOngoingQuotation" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ongoing_loan"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/myOngoingQuotation"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutTwo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="3"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"
            android:id="@+id/myDoneQuotation" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish_loan"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/myDoneQuotation"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>


