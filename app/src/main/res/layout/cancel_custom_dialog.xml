<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/progress"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!--
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="작성이 취소됩니다."
            android:textColor="@color/pointTypo"
            android:textSize="@dimen/medium" />
            -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium"
            android:textColor="@color/normalTypo"
            android:lineSpacingExtra="7sp"
            android:text="지금 이 창을 벗어나면 입력하신 내용은 저장되지 않습니다."/>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="@dimen/medium"
            android:textColor="@color/pointTypo"
            android:text="작성을 취소하시겠습니까?" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium"
                    android:layout_toLeftOf="@+id/no"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/pointTypo"
                    android:text="네"
                    android:background="@drawable/round_button"
                    android:layout_marginBottom="3dp"/>

                <Button
                    android:id="@id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium"
                    android:textColor="@color/progress"
                    android:layout_alignParentEnd="true"
                    android:text="아니오"
                    android:background="@drawable/round_button"
                    android:layout_marginBottom="3dp"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>